.details-wrap {
  color: #111;
}
.title-wrap {
  position: relative;
}
.bg-wrap {
  position:relative;
  overflow:hidden;
  height:240px;
  background:rgba(0, 0, 0, .8);
}
.bg-img {
  position: absolute;
  width: 100%;
  height: 1000rpx;
}
.title-cover {
  position:absolute;
  width:100%;
  height:480rpx;
  background:rgba(0, 0, 0, .7);
  top:0;
}
.title-img {
  position: absolute;
  bottom: -30rpx;
  left: 40rpx;
  z-index: 100;
  width: 200rpx;
  height: 300rpx;
}
.title-text {
  position: absolute;
  z-index: 101;
  bottom: 0;
  left: 250rpx;
  color: #fff;
}
.collection {
  position: absolute;
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  border: 1px solid #d6d6d6;
  text-align: center;
  line-height: 64rpx;
  top: 20rpx;
  right: 20rpx;
  font-size: 48rpx;
}
.info-wrap {
  padding: 50rpx 40rpx;
  color: #111;
}
.summary-wrap {
  padding: 0 40rpx;
  color: #111;
}
.reviews-wrap-1 {
  padding: 50rpx 40rpx;
}
.reviews-wrap-2 {
  padding: 0 40rpx;
}
.short-reviews {
  display: flex;
  justify-content: flex-start;
  padding: 10rpx 0;
}
.author {
  height: 100%;
}
.author-avatar {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 50%;
}
.comments-info {
    text-align: justify;  
}
.long-comments {
  padding: 20rpx 0;
  border-bottom: 2rpx solid rgba(214, 214, 214, .3);
}
.rate-info {
  display: inline-block;
  padding: 0 5rpx;
}