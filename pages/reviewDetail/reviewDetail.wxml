<view class="review-wrap">
  <view class="font-large weight">{{detail.title}}</view>
  <view>
   <image class="detail-img" src="{{detail.author.avatar}}"></image>
   <text>{{detail.author.name}}</text>
   <rate score="{{score}}"></rate>
   <text>{{detail.updated_at}}</text>
  </view>
  <view class="content font-medium">
    <text>{{detail.content}}</text>
  </view>
</view>
